pipeline {
    agent any
    
    environment {
        MAVEN_HOME = tool 'Maven'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    // Usando 'bat' em vez de 'sh' para sistemas Windows
                    bat "${env.MAVEN_HOME}\\bin\\mvn clean compile"
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Usando 'bat' em vez de 'sh' para sistemas Windows
                    bat "${env.MAVEN_HOME}\\bin\\mvn test"
                }
            }
        }
        
        stage('Deploy to Develop') {
            steps {
                script {
                    // Usando 'bat' em vez de 'sh' para sistemas Windows
                    bat 'git checkout develop'
                    bat 'git add .'
                    bat 'git commit -m "Atualização automática da pipeline Jenkins"'
                    bat 'git push origin develop'
                }
            }
        }
    }
}
