pipeline {
    agent any
    
    environment {
        MAVEN_HOME = tool 'Maven'
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                script {
                    bat "${env.MAVEN_HOME}\\bin\\mvn clean compile"
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    bat "${env.MAVEN_HOME}\\bin\\mvn test"
                }
            }
        }
        
        stage('Deploy to Develop') {
    steps {
        script {
            // Mudar para a branch "develop"
                    bat 'git checkout develop'
                    
                    // Puxar as alterações mais recentes da branch "develop"
                    bat 'git pull origin develop'
                    
                    // Mesclar as alterações da branch "main" na branch "develop"
                    bat 'git merge origin/main --no-ff -m "Merge main into develop"'
                    
                    // Forçar o push das alterações para a branch "develop" remota
                    bat 'git push origin develop'
        }
    }
}

    }
}
